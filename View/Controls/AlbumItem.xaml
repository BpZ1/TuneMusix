<UserControl x:Class="TuneMusix.View.Controls.AlbumItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:cmd="http://www.galasoft.ch/mvvmlight"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TuneMusix.View.Controls"
             mc:Ignorable="d">
    <materialDesign:Flipper x:Name="Flipper" >
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseDown">
                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Page}}, Path=DataContext.OnClick}"
                                           CommandParameter="{Binding ElementName=Flipper}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <materialDesign:Flipper.FrontContent>
            <StackPanel Margin="5" HorizontalAlignment="Center" >
                <!-- Name of album, cover image and number of tracks-->
                <TextBlock Text="{Binding Name}" TextAlignment="Center" FontSize="16"/>
                <Image Source="{Binding Image}" Width="200" Height="200"/>
            </StackPanel>
        </materialDesign:Flipper.FrontContent>
        <materialDesign:Flipper.BackContent>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding Name}" TextAlignment="Center"/>
                <!-- add list of tracks here-->
                <ListBox ItemsSource="{Binding Itemlist}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </materialDesign:Flipper.BackContent>
    </materialDesign:Flipper>
</UserControl>

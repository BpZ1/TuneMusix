<Page x:Class="TuneMusix.View.MusicPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:vm="clr-namespace:TuneMusix.ViewModel"
      xmlns:local="clr-namespace:TuneMusix.View"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="800"
      Title="MusicPlayerPage" 
      DataContext="{DynamicResource MusicPlayerViewModel}">
    <Page.Resources>
        <vm:MusicPlayerViewModel x:Key="MusicPlayerViewModel"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" x:Name="AudioControls">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="BackButton" Grid.Column="0" Source="{Binding BackwardButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding LeftMouseDown_BackButton}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
                <Image x:Name="PlayButton" Grid.Column="1" Source="{Binding PlayButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding LeftMouseDown_PlayButton,UpdateSourceTrigger=PropertyChanged}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
                <Image x:Name="ForwardButton" Grid.Column="2" Source="{Binding ForwardButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding LeftMouseDown_ForwardButton}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="VolumeSlider" Value="{Binding Volume,Mode=TwoWay}" ToolTip="{Binding Volume,UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Maximum="100"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0" x:Name="PositionSlider" Value="{Binding CurrentSliderPosition,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding CurrentSliderPosition,UpdateSourceTrigger=PropertyChanged}"
                            Minimum="0" Maximum="{Binding Length,UpdateSourceTrigger=PropertyChanged}"  TickFrequency="0.1" IsEnabled="{Binding TrackLoaded}" >
                    <Slider.Effect>
                        <DropShadowEffect/>
                    </Slider.Effect>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                            <i:InvokeCommandAction Command="{Binding LeftMouseUp_Slider}" CommandParameter="{Binding ElementName=PositionSlider}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding LeftMouseDown_Slider}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Slider>

                <Slider Grid.Column="1" x:Name="BalanceSlider" Value="{Binding Balance,Mode=TwoWay}" Grid.Row="1" Minimum="-100" Maximum="100"/>
            </Grid>
        </Grid>
        <Grid x:Name="TrackInfo" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Content="{Binding CurrentTrackName}" FontWeight="Bold" Background="Black" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontFamily="Segoe WP"/>
            </Grid>
            <Grid Grid.Row="1">
                <Label Content="{Binding CurrentPlaylistName}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" FontFamily="Segoe WP Black"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
